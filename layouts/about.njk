{% extends "layout.njk" %}
{% set waveType = 'gray' %}
{% block body %}

<!-- Our Lagecy Section Begin -->

    <div class="lagecy-sec">
      <div class="container">
        <div class="lagecy-inr">
          <div class="lagecy-inr-row row">
            <div class="lagecy-left-wrp col-lg-6">
              <div class="lagecy-left">
                <div class="sec-inr-head">
                  <h2>{{ about_intro.heading }}</h2>
                </div>
                <div class="lagecy-content">
                  {{ about_intro.description }}
                </div>
              </div>
            </div>
            <div class="lagecy-right-wrp col-lg-6">
                <div class="lagecy-right">
                    <div class="lagecy-right-imges">
                        <div class="img-1 lagecy-img-wrp">
                            <img src="{{ about_intro.image_1 }}" alt="Lagecy image">
                        </div>
                        <div class="img-2 lagecy-img-wrp">
                            <img src="{{ about_intro.image_2 }}" alt="Lagecy Image">
                        </div>
                    </div>
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  <!-- End Of Our Lagecy Section -->

<!-- Nederman Section Begin -->

<div class="nederman-sec">
  <div class="container">
      <div class="nederman-inr">
          <div class="heading">
              <h2>{{ a_nederman_company.heading }}</h2>
          </div>
          <div class="nederman-content">
            <p>{{ a_nederman_company.description | nl2br }}</p>
          </div>
      </div>
  </div>
</div>

<!-- End Of Nederman Section -->

<!-- Milestonse Section begin -->

<div class="milestones-sec">
  <div class="container">
      <div class="mlstn-inr">
          <div class="sec-head">
              <h2>Key Milestones</h2>
          </div>
          
          <div class="timeline-container">
              <div class="timeline">
                {%- for item in key_milestone -%}
                  <div class="segment"></div>
                {%- endfor -%}
              </div>
              {%- for item in key_milestone -%}
              <div class="event">
                  <div class="event-dtls">
                      <h2>{{ item.year }}</h2>
                      <p>{{ item.description | nl2br }}</p>
                  </div>
                  <div class="dot"></div>
              </div>
              {%- endfor -%}
          </div>
      </div>
  </div>
</div>

<!-- End of Milestonse Section -->

<!-- Expertise Section Begin -->

<div class="expertise-sec">
  <div class="container">
      <div class="expertise-inr">
          <div class="sec-head">
              <h2>Our Expertise</h2>
          </div>
          {%- for item in our_experties -%}
          <div class="expertise-cards row">
              <div class="expts-card-left-wrp col-lg-6">
                  <div class="expts-card-left">
                      <div class="exptscd-img">
                          <img src="{{ item.image }}" alt="Expertise Image">
                      </div>
                  </div>
              </div>
              <div class="expts-card-right-wrp col-lg-6">
                  <div class="expts-card-right">
                      <div class="sec-inr-head">
                          <h3 class="h2-title">{{ item.heading }}</h3>
                      </div>
                      <div class="lagecy-content">
                        <p>{{ item.description | nl2br }}<p/>
                      </div>
                  </div>
              </div>
          </div>
          {%- endfor -%}
      </div>
  </div>
</div>

<!-- End Of Expertise Section -->



<div class="bg-light">
    <section class="section">
        <h3 class="text-center ruled">Always Engineered, Never Off the Shelf</h3><br><br>
        {%- for card in cards -%}
        <div class="card card-horizontal" data-href="{{card.url}}">
            <div class="card-img-container">
                <img src="{{card.image}}" class="img-responsive card-img" alt="">
            </div>
            <div class="card-copy">
                <h4 class="h3 pc">{{card.title}}</h4>
                {{card.copy}}
                <br><a href="{{card.url}}" class="link-learn-more card-link">Learn More</a>
            </div>
        </div>
        {%- endfor %}
    </section>
</div>
<section class="section">
    <h3 class="ruled text-center">Solutions Delivered</h3>
    <br><br>
        {% include "partials/solutions-delivered.njk" %}
</section>
<section class="section">
    <h3 class="ruled text-center">Duroair, a Nederman Company</h3>
    <br><br>
        {% include "partials/about-us-additional.njk" %}
</section>
{% endblock %}