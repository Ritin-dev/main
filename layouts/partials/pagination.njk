<div class="pagination">
    {# Previous Button #}
    {% if pagination.previous %}
    <a href="/{{ pagination.previous.path }}" class="pagination-previous">
        ⬅️ <!-- Custom Arrow (Change this emoji or replace it with an SVG) -->
    </a>
    {% endif %}

    {# Page Numbers with Ellipsis Handling #}
    {% set totalPages = pagination.pages | length %}
    {% set currentPage = loop.index0 %}

    {% for page in pagination.pages %}
        {% if loop.index == 1 or loop.index == totalPages or (loop.index >= pagination.currentPage - 1 and loop.index <= pagination.currentPage + 1) %}
            {% if page.path == pagination.current.path %}
                <span class="pagination-number active">{{ loop.index }}</span>
            {% else %}
                <a href="/{{ page.path }}" class="pagination-number">{{ loop.index }}</a>
            {% endif %}
        {% elseif loop.index == pagination.currentPage - 2 or loop.index == pagination.currentPage + 2 %}
            <span class="pagination-dots">...</span>
        {% endif %}
    {% endfor %}

    {# Next Button #}
    {% if pagination.next %}
    <a href="/{{ pagination.next.path }}" class="pagination-next">
        ➡️ <!-- Custom Arrow (Change this emoji or replace it with an SVG) -->
    </a>
    {% endif %}
</div>
