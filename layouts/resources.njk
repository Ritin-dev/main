{% extends "layout.njk" %}
{% block body %}
<!-- Understand Section Begin -->

    <div class="understand-sec cmn-gap">
        <div class="container">
            <div class="understand-inr">
                <div class="sec-inr-head">
                    <h2>{{resource.head}}</h2>
                </div>
                <div class="row">
                    <div class="col-lg-8 col-md-7 col-sm-12 understand-left-col">
                        <div class="understand-left">
                            <div class="understandleft-img">
                                <img src="{{resource.image_1}}" alt="Image">
                            </div>
                            <p>{{resource.desc}}</p>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-5 col-sm-12 understand-right-col">
                        <div class="understand-right">
                            <div class="blob1"></div>
                            <div class="undrstnd-rt-img"><img src="{{resource.image_2}}" alt="Image"></div>
                            <div class="undrstnd-rt-img"><img src="{{resource.image_3}}" alt="Image"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

  <!-- End Of Understand Section -->

<div class="bg-light">
    <section class="section">
        <h3 class="text-center ruled">Educational Resources on<br>Industrial Clean Air Innovation</h3><br><br>
        {%- for card in cards -%}
        <div class="card card-horizontal" data-href="{{card.url}}">
            <div class="card-img-container">
                {%- if card.type === 'Blog' -%}
                    {% set img = posts[0].jumbotron.img %}
                {%- elif card.type === 'Case Study' -%}
                    {% set img = caseStudies[0].jumbotron.img %}
                {%- elif card.type === 'Video' -%}
                    {%- set img = videos[0].youtube_url | getYoutubeThumbnail -%}
                {%- else -%}
                {%- endif -%}
                {% set img = card.image %}
                <img src="{{img}}" class="img-responsive card-img" alt="">
            </div>
            <div class="card-copy">
                <h4 class="h3 pc">{{card.title}}</h4>
                {{card.copy}}
                <br><a href="{{card.url}}" class="link-learn-more card-link">Learn More</a>
            </div>
        </div>
        {%- endfor %}
    </section>
</div>
    <!-- GLOBAL-LEADERS-SECTION -->
        <div class="global-leaders-wrap">
            <div class="container">
            <div class="row">
                <div class="col-lg-12">
                <div class="section-heading">
                    <h2>Trusted by Global Leaders</h2>
                </div>
                </div>
                <div class="col-lg-12">
                  {% include "partials/solutions-delivered.njk" %}
                </div>
            </div>
            </div>
        </div>
    <!-- GLOBAL-LEADERS-SECTION -->
{% endblock %}