<!doctype html>
<html lang="en">
    <head>
        {% include "partials/head.njk" %}
    </head>
    <body class="page-{{ title | cssClassify }}  landing-page ">
    {% include "partials/header.njk" %}
        {%- include "partials/gtm-noscript.njk" -%}
        <div id="hero" class="{{waveType}} lp-hero">
            <div class="container lp-logo-container">
                <a class="header-logo" href="/" title="Duroair Home">{% include "partials/inline-svg-logo.njk" %}</a>
            </div>
            <div class="container lp-header">
                <div class="jumbo-content">
                    {# <div class="date">{{date}}</div> #}
                    <h1 class="jumbotron-headline">{{ jumbotron.headline if jumbotron.headline else title }}</h1>
                    <div class="jumbo-tagline">{{ jumbotron.tagline }}</div>
                    <a href="#form-container" class="btn btn-default" data-ga-event="Button" data-ga-action="Click">{{jumbotron.ctaText if jumbotron.ctaText else 'Download Now' }}</a>
                </div>
            </div>
            <div class="hero-overlay"></div>
        </div>

<!-- White Paper Details Section Begin -->

        <div class="white-paper-details-sec cmn-gap">
            <div class="container">
                <div class="white-paper-details-inr has-texture">
                    <img src="images/white-paper-detail-bg-texture.png" alt="Image" class="texture-nw">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="whitepprdtl-left-wrp">
                                <div class="white-paper-details-inr-left">
                                    <div class="white-paper-details-inr-left-img">
                                        <div class="whitepaperdtl-img-inr">
                                            <img src="{{header_img}}" alt="White Paper Details Image">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="white-paper-details-inr-right">
                                <div class="sec-inr-head">
                                    <h2>{{ title }}</h2>
                                    <p>{{ jumbotron.tagline }}</p>
                                </div>
                                <a href="#" class="cmn-btn button">Download Now <span class="button__spotlight"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    <!-- End Of White Paper Details Section -->

        <section class="section lp-top">
            <img src="{{header_img}}" alt="" class="img-responsive header-img">
            <div class="grid-2">
                <div class="lp-content">
                    {{ contents | safe }}
                </div> 
                <div class="form-container" id="form-container">
                    <div class="form-intro">{{form_intro | md}}</div>
                    {% include "partials/hubspot-form.njk" %}
                </div>
            </div>
        </section>


        {%- include "partials/colophon.njk" -%}
        <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
        {% include "partials/footer-scripts.njk" %}
    </body>
</html>